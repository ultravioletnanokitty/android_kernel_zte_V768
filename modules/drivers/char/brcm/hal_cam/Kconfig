config CAM_CSI2
	bool "CSI2 interface for STV0987"
	depends on BCM_CAM_MT9D115
	default N
        ---help---
        Camera host interface CSI2 

config CAM_CPI
	bool "Camera Host Interface CPI"
	depends on (!CAM_CSI2)
	default N
        ---help---
        Camera Host Interface CPI

